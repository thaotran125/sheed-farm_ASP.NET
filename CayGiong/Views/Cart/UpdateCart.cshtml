@model CayGiong.ViewModel.CartViewModel

<div class="container" id="tableCart">
    <div class="row col-md-12">
        <div class="col-sm-8 col-lg-8 tableCart">
            <div class="table-main table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Images</th>
                            <th>Product Name</th>
                            <th>Quantity</th>
                            <th>Total</th>
                            <th>Remove</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.listcart)
                        {
                            <tr>
                                <td class="thumbnail-img">
                                    <a href="#">
                                        <img class="img-fluid" src="~/Images/Product/@item.product.img_Prodcut" alt="" />
                                    </a>
                                </td>
                                <td class="name-pr">
                                    <a href="#">
                                        @item.product.name_product
                                    </a>
                                </td>
                                @*<td class="price-pr">
                                        <p>@item.product.price VND</p>
                                    </td>*@
                                <td class="quantity-box">
                                    <div class="div-quantity">
                                        <button class="btn-minus" id="minus" data-minus="@item.product.id_Product"><span class="sp-minus">-</span></button>
                                        <input type="number" inputmode="numeric" size="4" value="@item.Quantity" min="0" step="1" class="cssnumber">
                                        <button class="btn-plus" id="plus"  data-plus="@item.product.id_Product"><span class="sp-plus">+</span></button>
                                    </div>
                                </td>
                                <td class="total-pr">
                                    <p>@string.Format("{0:n0}", item.product.price * item.Quantity) VDN</p>
                                </td>
                                <td class="remove-cart">
                                    <button class="removeCart" data-remove="@item.product.id_Product">
                                        <i class="fas fa-times"></i>
                                    </button>
                                </td>
                            </tr>
                        }


                    </tbody>
                </table>
            </div>
        </div>

        <div class="col-sm3 summary">
            <div class="order-box">
                <h3>Order summary</h3>
                <div class="d-flex">
                    <h4>Tổng Tiền</h4>
                    <div class="ml-auto font-weight-bold">@string.Format("{0:n0}", Model.listcart.Sum(x => (x.Quantity * x.product.price))) VNĐ </div>
                </div>
                <div class="d-flex">
                    <h4>Tổng Sô lượng</h4>
                    <div class="ml-auto font-weight-bold"> @Model.listcart.Sum(x => x.Quantity) </div>
                </div>
                <hr class="my-1">
                <div class="d-flex">
                    <h4>Phiếu Giảm Giá</h4>
                    <div class="ml-auto font-weight-bold"> 0 VNĐ </div>
                </div>
                <div class="d-flex">
                    <h4>Phí Vận Chuyển</h4>
                    <div class="ml-auto font-weight-bold"> Free </div>
                </div>
                <hr>
                <div class="d-flex gr-total">
                    <h5>Thành Tiền</h5>
                    <div class="ml-auto h5"> @string.Format("{0:n0}", (double)Model.listcart.Sum(x => (x.Quantity * x.product.price))) VNĐ  </div>
                </div>
                <hr>
                <div>
                    <a href="/Cart/CustomerInfor" class="btnunti btn hvr-hover" id="payment">Thanh Toán</a>
                </div>
            </div>
        </div>
    </div>
</div>
